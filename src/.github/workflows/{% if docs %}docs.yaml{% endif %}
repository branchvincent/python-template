name: Docs

on:
  workflow_dispatch:
  release:
    types: [released]

jobs:
  publish:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Set up Poetry
        run: pipx install poetry
      - uses: actions/setup-python@v5
        with:
          python-version: 3.12
          cache: poetry
      - name: Install package
        run: poetry install
      - name: Publish docs
        run: poetry run mkdocs gh-deploy
