name: Docs

on:
  workflow_dispatch:
  release:
    types: [released]

jobs:
  publish:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - name: Set up uv
        run: pipx install uv
      - uses: actions/setup-python@v5
        with:
          python-version: 3.13
      - name: Install package
        run: uv sync --frozen --all-extras
      - name: Publish docs
        run: uv run mkdocs gh-deploy
