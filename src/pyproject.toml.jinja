[project]
name = "{{project_name | lower | replace(' ', '-') | replace('_', '-')}}"
version = "0.1.0"
description = "{{project_description}}"
readme = "README.md"
authors = [{ name = "{{author_name}}", email = "{{author_email}}" }]
requires-python = ">=3.10"
dependencies = []
urls.repository = "https://github.com/{{repo_username}}/{{repo_name}}"
{%- if private %}
classifiers = ["Private :: Do Not Upload"]
{%- endif %}

[dependency-groups]
{%- if docs %}
docs = ["mkdocs", "mkdocs-material"]
{%- endif %}
dev = ["prek", "pytest", "ruff", "taskipy", "ty"]

[tool.taskipy.tasks]
clean = { cmd = "rm -rf .*_cache/ dist/", help = "Remove build artifacts" }
{% if docs -%}
docs = { cmd = "mkdocs serve -f docs/mkdocs.yaml", help = "Serve documentation"}
{% endif -%}
lint = { cmd = "prek run --all-files", help = "Run linters and formatters" }
test = { cmd = "pytest", help = "Run tests" }

[tool.ty]
environment = { python-platform = "all" }
terminal = { output-format = "concise" }

[tool.pytest.ini_options]
testpaths = ["tests"]

[tool.ruff]
fix = true
lint = { select = ["B", "E", "F", "I", "SIM", "UP"] }

[build-system]
requires = ["flit_core >=3.2,<4"]
build-backend = "flit_core.buildapi"
